extends layout.pug 
block Content 
    .containerStudent
        h1 Here is the list of students
        table(border="1").tblStudents
            tr 
                th Id
                th First Name
                th Last Name
                th Email
                th Update
                th Delete student record
            each student in studentData
                tr 
                    td #{student.id}
                    td #{student.first_name}
                    td #{student.last_name}
                    td #{student.email}
                    td
                        a.btnEdit(href=`/students/${student.id}/edit`) Edit
                    td
                        a.btnDelete(href=`/students/${student.id}/delete`) Delete